{
  "manifest_version": 3,
  "name": "CareerCopilot",
  "version": "1.0.0",
  "description": "AI-powered ATS resume and cover letter tailoring extension.",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open CareerCopilot"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "src/background.ts"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.ts"]
    }
  ]
}
